<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaygroupActivity">

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Anwenden"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_sun_holiday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_apply"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Sonn und Feiertag"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_saturday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_sun_holiday"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Samstag"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_vacation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_saturday"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Ferien"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_schoolday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_vacation"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Schultag"
        android:textSize="20sp" />

</RelativeLayout>