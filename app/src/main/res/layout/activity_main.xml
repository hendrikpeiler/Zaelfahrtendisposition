<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="       AFZ Erhebungsportal im VVS"
            android:textAlignment="center"
            android:textSize="26sp" />

        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alle Daten auf einem Blick"
            android:textAlignment="center"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/zacke"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:src="@drawable/zacke_stuttgart" />
        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wonach mÃ¶chten Sie filtern?"
            android:textAlignment="center"
            android:textSize="20sp" />
        </LinearLayout>
    <Button
        android:id="@+id/btn_daygroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_line"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Tagesgruppe"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_direction"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Linie"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_direction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_scedule"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Richtung"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_scedule"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_search"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Abfahrtszeit"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="Suchen"
        android:textSize="20sp" />
</RelativeLayout>